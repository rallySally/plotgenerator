<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Job</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Color</th>
      <th>Hair</th>
      <th>Charone</th>
      <th>Chartwo</th>
      <th>Charthree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.surname %></td>
        <td><%= person.job %></td>
        <td><%= person.age %></td>
        <td><%= person.gender %></td>
        <td><%= person.color %></td>
        <td><%= person.hair %></td>
        <td><%= person.charOne %></td>
        <td><%= person.charTwo %></td>
        <td><%= person.charThree %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

